{
    "manifest_version": 2,
  
    "name": "Monochrome",
    "description": "Chrome extension that turns web pages into grayscale.",
    "version": "1.0",
  
    "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Click to change background color"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["grayscale.js"]
    }],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": [
      "activeTab",
      "storage"
    ]
  }
  